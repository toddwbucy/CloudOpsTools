# CloudOpsTools Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME=CloudOpsTools
ENVIRONMENT=development
DEBUG=true
DEV_MODE=false

# Security - CHANGE THIS IN PRODUCTION
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///./data/cloudopstools.db

# Server Settings
HOST=0.0.0.0
PORT=8500

# CORS Origins (JSON array or comma-separated list)
# CORS_ORIGINS=["http://localhost:8500", "http://localhost:3000"]

# AWS Credentials for Commercial Environment (optional)
# AWS_ACCESS_KEY_ID_COM=
# AWS_SECRET_ACCESS_KEY_COM=
# AWS_SESSION_TOKEN_COM=

# AWS Credentials for GovCloud Environment (optional)
# AWS_ACCESS_KEY_ID_GOV=
# AWS_SECRET_ACCESS_KEY_GOV=
# AWS_SESSION_TOKEN_GOV=

# Session Settings
SESSION_LIFETIME_MINUTES=30

# Script Execution Settings
MAX_CONCURRENT_EXECUTIONS=5
EXECUTION_TIMEOUT=1800
